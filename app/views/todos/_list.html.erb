<table class="table table-hover">
  <thead>
    <th>
      Title
    </th>
    <th class="hidden-xs">
      Creator
    </th>
    <th>
      Due in
    </th>
    <th class="hidden-xs">
      Category
    </th>
    <th>
      Solve!
    </th>
  </thead>
  <tbody>
    <% todos.each do |todo| %>
    <tr>
      <td>
        <%= link_to todo.title, todo_path(todo) %>
      </td>
      <td class="hidden-xs">
        <%= User.find(todo.creator_id).to_s %>
      </td>
      <td>
        <%= todo.due %>
      </td>
      <td class="hidden-xs">
        <%= link_to todo.todo_category, todo_category_path(todo.todo_category) %>
      </td>
      <td>
        <%= link_to 'Solve!', todo_path(todo), class:"btn btn-primary" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
