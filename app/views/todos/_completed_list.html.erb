<table class="table table-hover">
  <thead>
    <th>
      Title
    </th>
    <th>
      Creator
    </th>
    <th>
      Solved at
    </th>
    <th>
      Solved by
    </th>
    <th>
      Category
    </th>
  </thead>
  <tbody>
    <% todos.each do |todo| %>
    <tr>
      <td>
        <%= link_to todo.title, todo_path(todo) %>
      </td>
      <td>
        <%= User.find(todo.creator_id).to_s %>
      </td>
      <td>
        <%= todo.todo_solution.created_at %>
      </td>
      <td>
        <%= User.find(todo.todo_solution.user_id).to_s %>
      </td>
      <td>
          <%= link_to todo.todo_category, todo_category_path(todo.todo_category) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate todos, renderer: BootstrapPagination::Rails %>
