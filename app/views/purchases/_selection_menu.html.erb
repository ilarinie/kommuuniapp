<div class="row">
<div class="col-md-5">

<div class="dropdown div-inline">
  <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
  Select Category
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li>
      <%= link_to 'Show all', purchases_path %>
    </li>
    <% categories.each do |cat| %>
    <li>
      <%= link_to cat, purchase_category_path(cat) %>
    </li>
    <%end%>
  </ul>
</div>
<b>OR</b>
<div class="dropdown div-inline">
  <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
  Select User
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li>
      <%= link_to 'Show all', purchases_path %>
    </li>
    <% users.each do |user| %>
    <li>
      <%= link_to user, userpurchases_path(user) %>
    </li>
    <% end %>
</div>

</div>
</div>
