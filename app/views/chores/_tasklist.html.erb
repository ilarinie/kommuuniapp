<table class="table">
  <thead>
    <tr>
      <th>
        By
      </th>
      <th>
        At
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
    <tr>
      <td>
        <%= task.user %>
      </td>
      <td>
        <%= task.created_at %>
      </td>
      <td>
        <% if task.user == current_user || current_user.admin? %>
        <%= link_to 'Delete',task, method: :delete, class:'btn btn-danger', data: {confirm: 'Are you sure you want to remove selected task?'} %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
