<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Priority</th>
      <th>Reward points</th>
    </tr>
  </thead>

  <tbody>
    <% chores.each do |chore| %>
    <tr>
      <td>
         <%= link_to chore.name, chore_path(chore) %>
      </td>
      <td>
        <%= chore.priority %>
      </td>
      <td>
        <%= chore.reward %>
      </td>
      <td>
        <%= link_to 'Complete', completechore_path(chore), class:"btn btn-primary", method: :post%>
      </td>
      <% if not current_user.chores.include? chore %>
      <td><%= link_to 'Add to frontpage', addchore_path(chore), method: :post, class:"btn btn-primary" %></td>
      <% else %>
      <td><%= link_to 'Remove from frontpage', removechore_path(chore), method: :delete, class:"btn btn-danger" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
