<h1><%= @purchase_category.name %> <%= link_to 'Edit', edit_purchase_category_path(@purchase_category), class:'btn btn-primary'%></h1><br/>

    <%= render 'purchases/selection_menu', categories: @categories, users:@users%>







<table class="table table-hover">
  <thead>
    <tr>
      <th>
        User
      </th>
      <th>
        Description
      </th>
      <th>
        Category
      </th>
      <th>
        Price
      </th>
      <th>
        Date
      </th>
    </tr>
  </thead>
  <tbody>
    <% @purchases.each do |purchase| %>
    <tr>
      <td>
        <%= purchase.user %>
      </td>
      <td>
        <%= purchase.description %>
      </td>
      <td>
        <%= purchase.purchase_category %>
      </td>
      <td>
        <%= purchase.price %>
      </td>
      <td>
        <%= purchase.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @purchases, renderer: BootstrapPagination::Rails %>
